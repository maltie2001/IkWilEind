        <Button x:Name="btnZoeken" Content="Zoeken" HorizontalAlignment="Left" Margin="43,274,0,0" VerticalAlignment="Top" Width="75"/>
        <Button Content="Aanpassen" HorizontalAlignment="Left" Margin="238,274,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btnToevoegen" Content="Toevoegen" HorizontalAlignment="Left" Margin="140,274,0,0" VerticalAlignment="Top" Width="75"/>
