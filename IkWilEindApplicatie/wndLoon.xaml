        <Label x:Name="lbAantal" Content="Aantal" HorizontalAlignment="Left" Margin="31,221,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbAfkomst" HorizontalAlignment="Left" Margin="140,137,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbCoordinator" HorizontalAlignment="Left" Margin="140,167,0,0" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="cbTeamleider" HorizontalAlignment="Left" Margin="140,199,0,0" VerticalAlignment="Top" Width="120"/>
