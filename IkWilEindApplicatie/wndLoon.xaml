    <Grid>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnBack_Click"/>
        <Label x:Name="lbAfkomst" Content="Afkomst" HorizontalAlignment="Left" Margin="31,137,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lbCoordinator" Content="Coördinator" HorizontalAlignment="Left" Margin="31,163,0,0" VerticalAlignment="Top"/>
