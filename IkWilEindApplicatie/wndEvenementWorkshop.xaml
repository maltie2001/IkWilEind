<Window x:Class="IkWilEindApplicatie.wndEvenementWorkshop"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IkWilEindApplicatie"
        mc:Ignorable="d"
        Title="wndEvenementWorkshop" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnBack" Content="Back" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="75" Click="BtnBack_Click"/>
        <DataGrid x:Name="dgEvenWork" HorizontalAlignment="Left" Height="245" Margin="10,166,0,0" VerticalAlignment="Top" Width="773"/>
        <Label x:Name="lbSoort" Content="Soort" HorizontalAlignment="Left" Margin="40,91,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbSoort" HorizontalAlignment="Left" Margin="103,91,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="CbSoort_SelectionChanged">
            <ComboBoxItem Content="Evenement"/>
            <ComboBoxItem Content="Workshop"/>
        </ComboBox>
        <TextBox x:Name="tbTest" HorizontalAlignment="Left" Height="23" Margin="300,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
